<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="10dp">


    <ImageView
        android:id="@+id/image_item_head"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="#cccccc"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        />

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_item_head"
        android:text="123"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/image_item_head"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_item_date"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="123"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/image_item_head"
        app:layout_constraintLeft_toRightOf="@id/image_item_head"
        android:layout_marginLeft="10dp"
        />

    <Button
        android:id="@+id/btn_item_atten"
        android:layout_width="80dp"
        android:layout_height="30dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/image_item_head"
        app:layout_constraintBottom_toBottomOf="@id/image_item_head"
        />

    <TextView
        android:id="@+id/tv_item_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/image_item_head"
        android:text="content"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/img_item_content"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/tv_item_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/tv_item_foot1"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_item_content"
        app:layout_constraintRight_toLeftOf="@id/tv_item_foot2"
        android:layout_marginTop="20dp"
        android:text="1"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        />
    <TextView
        android:id="@+id/tv_item_foot2"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/tv_item_foot1"
        app:layout_constraintRight_toLeftOf="@id/tv_item_foot3"
        app:layout_constraintTop_toTopOf="@id/tv_item_foot1"
        android:text="2"
        android:textSize="20sp"
        app:layout_constraintHorizontal_weight="1"
        />
    <TextView
        android:id="@+id/tv_item_foot3"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintHorizontal_weight="1"
        android:gravity="center"
        app:layout_constraintLeft_toRightOf="@id/tv_item_foot2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_item_foot1"
        android:text="3"
        android:textSize="20sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>