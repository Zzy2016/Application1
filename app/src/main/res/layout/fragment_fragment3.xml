<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragments.Fragment3">

    <ImageView
        android:id="@+id/img_add"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:text="title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/img_add"
        app:layout_constraintBottom_toBottomOf="@id/img_add"
        android:textSize="30sp"
        />

    <ImageView
        android:id="@+id/img_set"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        />


    <ImageView
        android:id="@+id/img_scan"
        android:layout_height="30dp"
        android:layout_width="30dp"
        app:layout_constraintTop_toTopOf="@id/img_set"
        app:layout_constraintRight_toLeftOf="@id/img_set"
        android:layout_marginRight="10dp"
        android:background="@color/colorPrimary"
        />


    <ImageView
        android:id="@+id/image_user"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/img_add"
        android:background="@color/colorPrimary"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_user"
        app:layout_constraintLeft_toRightOf="@id/image_user"
        android:text="用户名"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_user_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/image_user"
        app:layout_constraintLeft_toRightOf="@id/image_user"
        android:textSize="20sp"
        android:text="add"
        android:layout_marginLeft="10dp"
        />

    <View
        android:id="@+id/divider"
        android:layout_height="2dp"
        android:layout_width="match_parent"
        android:background="#cccccc"
        app:layout_constraintTop_toBottomOf="@id/image_user"
        android:layout_marginTop="10dp"/>


    <TextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:textSize="20sp"
        android:text="text1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/tv2"
        />
    <TextView
        android:id="@+id/tv2"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:layout_height="50dp"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/divider"
        android:text="text2"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/tv1"
        app:layout_constraintRight_toLeftOf="@id/tv3"
        />
    <TextView
        android:id="@+id/tv3"
        android:layout_height="50dp"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_weight="1"
        android:textSize="20sp"
        android:text="text3"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintLeft_toRightOf="@id/tv2"
        />


</androidx.constraintlayout.widget.ConstraintLayout>